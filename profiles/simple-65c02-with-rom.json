{
    "$schema": "../schemas/machine-profile.schema.json",
    "name": "simple-65c02-with-rom",
    "displayName": "Simple 65C02 with Monitor ROM",
    "description": "65C02 with 48KB RAM and 16KB ROM - example profile demonstrating ROM configuration",
    
    "cpu": {
        "type": "65C02",
        "clockSpeed": 1000000
    },
    
    "addressSpace": 16,
    
    "memory": {
        "rom-images": [
            {
                "name": "monitor",
                "source": "library://roms/simple-rom.bin",
                "size": "0x4000",
                "required": true,
                "on_verification_fail": "fallback"
            }
        ],
        "physical": [
            {
                "name": "main-ram-48k",
                "size": "0xC000",
                "fill": "0x00"
            },
            {
                "name": "system-rom-16k",
                "size": "0x4000",
                "sources": [
                    {
                        "type": "rom-image",
                        "name": "monitor",
                        "rom-image": "monitor",
                        "offset": "0x0000"
                    }
                ]
            }
        ],
        "regions": [
            {
                "name": "main-ram",
                "type": "ram",
                "start": "0x0000",
                "size": "0xC000",
                "permissions": "rwx",
                "source": "main-ram-48k",
                "source-offset": "0x0000"
            },
            {
                "name": "system-rom",
                "type": "rom",
                "start": "0xC000",
                "size": "0x4000",
                "permissions": "rx",
                "source": "system-rom-16k",
                "source-offset": "0x0000"
            }
        ]
    }
}