<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BadMango.Emulator.UI.App"
             RequestedThemeVariant="Dark">
    <!-- 
    "RequestedThemeVariant" is the default theme variant for the application.
    Options: Light, Dark, Default (system preference)
    Default is Dark for retro-modern design per spec.
    -->
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://bpui/Resources/Styles/AppStyles.axaml" />
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://bpui/Resources/Styles/ColorPalette.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>