{
    "$schema": "https://github.com/Bad-Mango-Solutions/back-pocket-basic/blob/d79de36f4c47acf0a90bbbf72cc3a66c5cd67d6e/schemas/machine-profile.schema.json",
    "name": "simple-65c02",
    "displayName": "Simple 65C02 System",
    "description": "Basic 65C02 with 64KB RAM - suitable for debugging and development",
    "cpu": {
        "type": "65C02",
        "clockSpeed": 1000000
    },
    "addressSpace": 16,
    "memory": {
        "physical": [
            {
                "name": "main-ram-64k",
                "size": "0x10000",
                "fill": "0x00"
            }
        ],
        "regions": [
            {
                "name": "main-ram",
                "type": "ram",
                "start": "0x0000",
                "size": "0x10000",
                "permissions": "rwx",
                "source": "main-ram-64k",
                "source-offset": "0x0000"
            }
        ]
    }
}