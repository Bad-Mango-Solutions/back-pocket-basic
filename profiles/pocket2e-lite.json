{
    "$schema": "../schemas/machine-profile.schema.json",
    "name": "pocket2e-lite",
    "displayName": "Pocket2e Lite",
    "description": "Pocket2e Lite system - Apple IIe clone with full 128KB RAM (via Language Card and Auxiliary Memory), I/O page with soft switches, slot manager, and ROM. Does not include slot cards.",

    "cpu": {
        "type": "65C02",
        "clockSpeed": 1020484
    },

    "addressSpace": 16,

    "memory": {
        "regions": [
            {
                "name": "main-ram",
                "type": "ram",
                "start": "0x0000",
                "size": "0xC000",
                "permissions": "rwx",
                "fill": "0x00"
            },
            {
                "name": "io-page",
                "type": "composite",
                "start": "0xC000",
                "size": "0x1000",
                "handler": "pocket2e-io"
            }
        ]
    },

    "roms": [
        {
            "name": "system-rom",
            "source": "library://roms/pocket2e-system.rom",
            "size": "0x4000",
            "required": true,
            "on_verification_fail": "fallback"
        }
    ],

    "slots": {
        "enabled": true,
        "internalC3Rom": true,
        "internalCxRom": false,
        "cards": []
    },

    "boot": {
        "autoStart": false
    }
}
