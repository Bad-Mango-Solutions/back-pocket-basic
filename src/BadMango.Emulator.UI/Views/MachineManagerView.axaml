<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BadMango.Emulator.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="BadMango.Emulator.UI.Views.MachineManagerView"
             x:DataType="vm:MachineManagerViewModel">

    <Design.DataContext>
        <vm:MachineManagerViewModel />
    </Design.DataContext>
    
    <Grid Margin="24" RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding ViewTitle}" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,24" />
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,24,*" RowDefinitions="*,24,*">
            <!-- Profiles Panel -->
            <Border Grid.Row="0" Grid.Column="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="16">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Machine Profiles" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,12" />
                    
                    <StackPanel DockPanel.Dock="Bottom" 
                                Orientation="Horizontal" 
                                Spacing="8"
                                Margin="0,12,0,0">
                        <Button Command="{Binding CreateProfileCommand}" Content="+ New Profile" />
                        <Button Command="{Binding DeleteProfileCommand}" Content="Delete" />
                    </StackPanel>
                    
                    <ListBox ItemsSource="{Binding Profiles}"
                             SelectedItem="{Binding SelectedProfile}"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:MachineProfileViewModel">
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Personality}" FontSize="12" Opacity="0.7" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            
            <!-- Active Instances Panel -->
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="16">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Active Instances" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,12" />
                    
                    <StackPanel DockPanel.Dock="Bottom" 
                                Orientation="Horizontal" 
                                Spacing="8"
                                Margin="0,12,0,0"
                                IsVisible="{Binding SelectedInstance, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <Button Command="{Binding PauseInstanceCommand}" Content="Pause" />
                        <Button Command="{Binding ResetInstanceCommand}" Content="Reset" />
                        <Button Command="{Binding StopInstanceCommand}" Content="Stop" />
                    </StackPanel>
                    
                    <ListBox ItemsSource="{Binding Instances}"
                             SelectedItem="{Binding SelectedInstance}"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:MachineInstanceViewModel">
                                <StackPanel Margin="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding ProfileName}" FontWeight="SemiBold" />
                                        <Border Background="{DynamicResource SecondaryBrush}" 
                                                CornerRadius="4" 
                                                Padding="6,2">
                                            <TextBlock Text="{Binding Status}" 
                                                       FontSize="11" 
                                                       Foreground="White" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding CpuInfo}" FontSize="12" Opacity="0.7" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            
            <!-- Profile Details Panel -->
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="16"
                    IsVisible="{Binding SelectedProfile, Converter={x:Static ObjectConverters.IsNotNull}}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Profile Details" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,12" />
                    
                    <Button DockPanel.Dock="Bottom"
                            Command="{Binding StartInstanceCommand}"
                            Content="â–¶ Start Instance"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0"
                            Padding="16,8"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="White" />
                    
                    <Grid ColumnDefinitions="Auto,16,*" RowDefinitions="Auto,8,Auto,8,Auto,8,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" />
                        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding SelectedProfile.Name}" />
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding SelectedProfile.Personality}" />
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="CPU:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding SelectedProfile.CpuType}" />
                        
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Memory:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="6" Grid.Column="2" Text="{Binding SelectedProfile.RamSize}" />
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>